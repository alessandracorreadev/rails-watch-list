<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= asset_path('bannermovie.png') %>);">
  <div class="container">
    <h1>My <strong>Watch</strong> List</h1>
    <p>List your favorite movies here.</p>
    <a class="btn btn-flat" href="#">Create a List</a>
  </div>
</div>

<div class="container mt-4">

<div class="cards">
  <% @lists.each do | list | %>
  <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= list.image_url %>)">
    <%= link_to list.name, list_path(list) %>
  </div>
  <% end %>

  <div class="card">
    <div class="card-body">
      <h5 class="card-title">Create a New List</h5>
      <%= simple_form_for @list do |f| %>
        <%= f.input :name %>
        <%= f.input :image_url %>
        <%= f.submit "Create", class: "btn btn-primary" %>
      <% end %>
    </div>

  </div>

</div>

</div>
